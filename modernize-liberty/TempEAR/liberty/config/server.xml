<server description="new server">

    <!-- Enable features -->
    <featureManager>
        <feature>ejbLite-3.2</feature>
        <feature>ejbRemote-3.2</feature>
        <feature>localConnector-1.0</feature>
        <feature>webProfile-8.0</feature>
    </featureManager>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint httpPort="9082" httpsPort="9442" id="defaultHttpEndpoint"/>
                  
    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>

    <keyStore id="defaultKeyStore" password="9XczJ2yRmrNqArtW7isz9Pb"/>
 
 	<basicRegistry id="basic" realm="BasicRealm"> 
        <!-- <user name="yourUserName" password="" />  --> 
    </basicRegistry>
    
    <applicationMonitor updateTrigger="mbean"/>

    <iiopEndpoint host="localhost" id="defaultIiopEndpoint" iiopPort="22809">
		<!-- the following option has to be removed to allow remote ejb calls without ssl 
			<iiopsOptions iiopsPort="22810" sslRef="mySSLConfiguration" suppressHandshakeErrors="false"/> -->
	</iiopEndpoint>
	
	<orb id="defaultOrb" iiopEndpointRef="defaultIiopEndpoint" nameService="corbaname::myhost:22809">
		<serverPolicy.csiv2>
			<layers>
				<authenticationLayer establishTrustInClient="Supported">
				</authenticationLayer>
				<transportLayer sslEnabled="false"/>
			</layers>
		</serverPolicy.csiv2>
		<clientPolicy.csiv2>
			<layers>
				<authenticationLayer establishTrustInClient="Supported">
				</authenticationLayer>
				<transportLayer sslEnabled="false">
				</transportLayer>
			</layers>
		</clientPolicy.csiv2>
	</orb>
</server>